<div class="container">
  <%= render 'shared/page_title', title: 'Available Ingredients' %>
  <hr />

  <div class="img-div mb-5"> 
   <%= will_paginate %> 
  </div>

  <% @ingredients.each do |ing| %>
    <div class="row w-100 mt-5">
      <div class="col-lg-6 m-auto well">
          <h4 class="text-center"> <%= link_to ing.name.capitalize, ingredient_path(ing) %></h4>
          <p class="text-center"> <%= pluralize(ing.recipes.count, "recipe") if ing.recipes %> </p>
          <% if logged_in? && current_chef.admin? %>
              <p class="text-center"><%= link_to "Edit this Ingredient", edit_ingredient_path(ing) %></p>  
          <% end %>  
      </div>
    </div>
  <% end %>

  <div class="img-div my-5"> 
   <%= will_paginate %>
  </div>

</div>
