<%= render 'shared/errors', obj: @ingredient %>

<div class="row w-100 mt-3 mb-5">
  <div class="col-lg-12 col-cen">
    <%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>                                                            
      <div class="form-group">
        <div class="control-label">
          <%= f.label :name %>
        </div>
        <div class="col-lg-12">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Ingredient", autofocus: true %>                                                                        
        </div>
      </div>
      
      <div class="form-group mt-3">
        <div class="">
          <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient", class: "btn btn-primary btn-md bt-clr") %>
        </div>
      </div>
    <% end %>
    <div class="colormatch mt-3">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]                                                                         
    </div>
  </div> 
</div>  